<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.pureart.flexus</groupId>
	<artifactId>flexus-parent</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Flexus Parent</name>

	<organization>
		<name>pureart.org</name>
		<url>http://www.pureart.org</url>
	</organization>

	<developers>
		<developer>
			<id>keyhom</id>
			<name>KeyHom.Chen</name>
			<roles>
				<role>Author Developer</role>
			</roles>
			<timezone>+8</timezone>
			<email>keyhom.c at gmail</email>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.encoding>UTF-8</maven.compiler.encoding>
		<flexworks.version>1.0-SNAPSHOT</flexworks.version>
		<flex.sdk.version>4.5.0.17689</flex.sdk.version>
		<framework.groupId>com.adobe.flex.framework</framework.groupId>
		<framework.scope>caching</framework.scope>
		<flex.debug>true</flex.debug>
		<repo.url>http://www.pureart.org:8081</repo.url>
	</properties>
	<inceptionYear>2011</inceptionYear>
	<modules>
		<module>flexus-integration</module>
	</modules>

	<dependencies>
		<dependency>
			<groupId>${framework.groupId}</groupId>
			<artifactId>flex-framework</artifactId>
			<version>${flex.sdk.version}</version>
			<type>pom</type>
			<exclusions>
				<exclusion>
					<groupId>${framework.groupId}</groupId>
					<artifactId>mobilecomponents</artifactId>
				</exclusion>
				<exclusion>
					<groupId>${framework.groupId}</groupId>
					<artifactId>osmf</artifactId>
				</exclusion>
				<exclusion>
					<groupId>${framework.groupId}</groupId>
					<artifactId>flex</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src/main/flex</sourceDirectory>
		<testSourceDirectory>src/test/flex</testSourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.pureart.maven.plugins</groupId>
				<artifactId>flexworks-maven-plugin</artifactId>
				<version>${flexworks.version}</version>
				<extensions>true</extensions>
				<configuration>
					<debug>${flex.debug}</debug>
					<actionscriptFileEncoding>UTF-8</actionscriptFileEncoding>
					<allowSourcePathOverlap>true</allowSourcePathOverlap>
					<keepAs3Metadatas>
						<keepAs3Metadata>Resource</keepAs3Metadata>
						<keepAs3Metadata>Inject</keepAs3Metadata>
						<keepAs3Metadata>Singleton</keepAs3Metadata>
						<keepAs3Metadata>Named</keepAs3Metadata>
						<keepAs3Metadata>Provides</keepAs3Metadata>
					</keepAs3Metadatas>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.adobe.flex</groupId>
						<artifactId>compiler</artifactId>
						<version>${flex.sdk.version}</version>
						<type>pom</type>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.pureart.maven.plugins
										</groupId>
										<artifactId>
											flexworks-maven-plugin
										</artifactId>
										<versionRange>
											[1.0-SNAPSHOT,)
										</versionRange>
										<goals>
											<goal>testCompile</goal>
											<goal>compileSwc</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<distributionManagement>
		<repository>
			<id>releases</id>
			<name>Releases</name>
			<layout>default</layout>
			<url>${repo.url}/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<name>Snapshots</name>
			<layout>default</layout>
			<url>${repo.url}/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

</project>
